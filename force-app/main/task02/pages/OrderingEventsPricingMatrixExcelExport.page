<apex:page
    controller="OrderingEventsPricingMatrixCtl_v2"
    sidebar="false"
    action="{!initateOrderingEventsPricingMatrix}"
    contentType="application/vnd.ms-excel#{!exportFileName}.xls"
>
    <table border="1">
        <thead>
            <!-- Table header row -->
            <tr>
                <th>Section</th>
                <th>Brand</th>
                <th>Product Code</th>
                <th>Detail SKU</th>
                <th>Retail Price</th>
                <th>Level1</th>
                <th>Level2</th>
                <th>Level3</th>
                <th>Level4</th>
                <th>Level5</th>
                <th>Level6</th>
                <th>Level7</th>
            </tr>
        </thead>
        <tbody>
            <!-- Loop over the productListToView and generate table rows -->
            <apex:repeat value="{!productListToView}" var="product">
                <tr>
                    <!-- Display the corresponding field values for each row -->
                    <td>{!product.Section}</td>
                    <td>{!product.Brand}</td>
                    <td>{!product.ProductCode}</td>
                    <td>{!product.DetailSKU}</td>
                    <td>{!product.RetailPrice}</td>
                    <td>{!product.Level1}</td>
                    <td>{!product.Level2}</td>
                    <td>{!product.Level3}</td>
                    <td>{!product.Level4}</td>
                    <td>{!product.Level5}</td>
                    <td>{!product.Level6}</td>
                    <td>{!product.Level7}</td>
                </tr>
            </apex:repeat>
        </tbody>
    </table>
</apex:page>
